{
  "compilerOptions": {
    /* === Z√ÅKLAD === */
    "target": "ES2020",
    "lib": ["DOM", "DOM.Iterable", "ES2020"],
    "jsx": "react-jsx",

    /* === MODULY === */
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,

    /* === STRICT === */
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,

    /* === INTEROP === */
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    /* === PERFORMANCE === */
    "skipLibCheck": true
  },

  "include": [
    "agent/**/*.ts",
    "server/server.ts",
    "ui/**/*.ts",
    "ui/**/*.tsx",
    "playwright/**/*.ts"
  ]
}
